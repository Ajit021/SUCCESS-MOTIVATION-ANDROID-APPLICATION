<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardBackgroundColor="#faf9f6f6"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp">
    <!--app:contentPadding="5dp">-->
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/R1">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/a"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
      <TextView
          android:id="@+id/rTitleTv"
          android:layout_toRightOf="@id/profile_image"
          android:layout_marginLeft="16dp"
          android:textSize="20dp"
          android:text="Title goes here"
          android:fontFamily="@font/roboto_black"
          android:textColor="#de1a1919"
          android:layout_width="match_parent"
          android:layout_marginTop="8dp"
          android:layout_height="34dp"
          />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rimage"
        android:layout_below="@id/profile_image">

      <com.zolad.zoominimageview.ZoomInImageView
          android:id="@+id/rImageView"
          android:layout_width="match_parent"
          android:layout_height="380dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:src="@drawable/checking" />

      <ImageView
          android:id="@+id/shareBtn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignBottom="@+id/rImageView"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginBottom="90dp"
          android:layout_marginEnd="15dp"
          android:layout_marginRight="15dp"

          android:src="@drawable/share" />

      <ImageView
          android:id="@+id/saveBtn"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignBottom="@+id/rImageView"
          android:layout_alignLeft="@id/shareBtn"
          android:layout_alignStart="@id/shareBtn"
          android:layout_marginBottom="43dp"
          android:src="@drawable/download" />
    </RelativeLayout>




  </RelativeLayout>







</android.support.v7.widget.CardView>